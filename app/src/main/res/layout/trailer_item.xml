<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="16dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/trailer_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_play_circle_filled_white_48dp"
        android:tint="@color/trailer_tint" />

    <TextView
        android:id="@+id/trailer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trailer_img"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:text="asdad asdasd asdasd asdas asd asda dasd asdadasd"
        android:textColor="@color/trailer_tint"
        android:textSize="12sp" />

</RelativeLayout>
